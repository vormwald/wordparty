<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <% if alert = flash[:alert] %>
    <p class="py-2 px-3 bg-red-50 dark:bg-red-900 mb-5 text-red-500 dark:text-red-200 font-medium rounded-lg inline-block" id="alert"><%= alert %></p>
  <% end %>

  <% if notice = flash[:notice] %>
    <p class="py-2 px-3 bg-green-50 dark:bg-green-900 mb-5 text-green-500 dark:text-green-200 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900 dark:text-gray-100">Create your account</h2>
  </div>

  <div class="mt-6 sm:mx-auto sm:w-full sm:max-w-sm">
    <%= form_with(model: @user, url: signup_path, class: "space-y-6") do |f| %>
      <div>
        <%= f.label :email_address, class: "block text-sm font-medium leading-6 text-gray-900 dark:text-gray-100" %>
        <div class="mt-2">
          <%= f.email_field :email_address, required: true, autofocus: true, autocomplete: "email", placeholder: "Enter your email address", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 dark:text-gray-100 shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-gray-600 placeholder:text-gray-400 dark:placeholder:text-gray-500 focus:ring-2 focus:ring-inset focus:ring-orange-600 dark:focus:ring-orange-500 sm:text-sm sm:leading-6 bg-white dark:bg-stone-700" %>
        </div>
      </div>

      <div>
        <%= f.label :password, class: "block text-sm font-medium leading-6 text-gray-900 dark:text-gray-100" %>
        <div class="mt-2">
          <%= f.password_field :password, required: true, autocomplete: "new-password", placeholder: "Create a password", maxlength: 72, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 dark:text-gray-100 shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-gray-600 placeholder:text-gray-400 dark:placeholder:text-gray-500 focus:ring-2 focus:ring-inset focus:ring-orange-600 dark:focus:ring-orange-500 sm:text-sm sm:leading-6 bg-white dark:bg-stone-700" %>
        </div>
      </div>

      <div>
        <%= f.label :password_confirmation, class: "block text-sm font-medium leading-6 text-gray-900 dark:text-gray-100" %>
        <div class="mt-2">
          <%= f.password_field :password_confirmation, required: true, autocomplete: "new-password", placeholder: "Confirm your password", maxlength: 72, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 dark:text-gray-100 shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-gray-600 placeholder:text-gray-400 dark:placeholder:text-gray-500 focus:ring-2 focus:ring-inset focus:ring-orange-600 dark:focus:ring-orange-500 sm:text-sm sm:leading-6 bg-white dark:bg-stone-700" %>
        </div>
      </div>

      <%= f.fields_for :player do |player_form| %>
        <div>
          <%= player_form.label :name, "Display Name", class: "block text-sm font-medium leading-6 text-gray-900 dark:text-gray-100" %>
          <div class="mt-2">
            <%= player_form.text_field :name, required: true, placeholder: "Choose a display name", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 dark:text-gray-100 shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-gray-600 placeholder:text-gray-400 dark:placeholder:text-gray-500 focus:ring-2 focus:ring-inset focus:ring-orange-600 dark:focus:ring-orange-500 sm:text-sm sm:leading-6 bg-white dark:bg-stone-700" %>
          </div>
        </div>

        <div>
          <%= player_form.label :avatar_url, "Avatar URL", class: "block text-sm font-medium leading-6 text-gray-900 dark:text-gray-100" %>
          <div class="mt-2">
            <%= player_form.text_field :avatar_url, placeholder: "Enter avatar URL (optional)", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 dark:text-gray-100 shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-gray-600 placeholder:text-gray-400 dark:placeholder:text-gray-500 focus:ring-2 focus:ring-inset focus:ring-orange-600 dark:focus:ring-orange-500 sm:text-sm sm:leading-6 bg-white dark:bg-stone-700" %>
          </div>
        </div>
      <% end %>

      <div>
        <%= f.submit "Sign up", class: "flex w-full justify-center rounded-md bg-orange-500 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-orange-600 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-orange-600" %>
      </div>
    <% end %>

    <p class="mt-10 text-center text-sm text-gray-500 dark:text-gray-400">
      Already have an account?
      <%= link_to "Sign in", new_session_path, class: "font-semibold leading-6 text-orange-600 hover:text-orange-500 dark:text-orange-400 dark:hover:text-orange-300" %>
    </p>
  </div>
</div>
